{
  "compileOnSave": false,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "plugins",
    "platforms",
    "origin_platforms",
    //"www"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "plugins"
    ],
    "types": [
      "node",
      "cordova",
      "elastos-cordova-plugin-did",
      "elastos-cordova-plugin-hive",
      "elastos-essentials-plugin-appmanager",
      "elastos-essentials-plugin-passwordmanager",
      "elastos-essentials-plugin-wallet",
      "cordova-plugin-camera"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "crypto": [
        "node_modules/crypto-browserify"
      ],
      "stream": [
        "node_modules/stream-browserify"
      ]
    }
  }
}
