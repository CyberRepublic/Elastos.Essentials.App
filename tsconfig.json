{
  "compileOnSave": false,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "plugins",
    "platforms",
    "origin_platforms",
    //"www"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false, 
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "plugins"
    ],
    "types": [
      "node",
      "cordova",
      "elastos-cordova-plugin-did",
      "elastos-cordova-plugin-hive",
      "elastos-essentials-plugins-passwordmanager",
      "cordova-plugin-camera"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
