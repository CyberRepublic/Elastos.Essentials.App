<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <org.elastos.essentials.plugins.dappbrowser.TitleBarIconView
            android:id="@+id/btnOuterLeft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:paddingLeft="10dp" />

        <org.elastos.essentials.plugins.dappbrowser.TitleBarIconView
            android:id="@+id/btnInnerLeft"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:paddingLeft="5dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <org.elastos.essentials.plugins.dappbrowser.UrlEditText
            android:id="@+id/txtUrl"
            android:layout_width="278dp"
            android:layout_height="37dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rounded_edittext"
            android:inputType="textWebEditText"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:singleLine="true" />

        <org.elastos.essentials.plugins.dappbrowser.TitleBarIconView
            android:id="@+id/btnOuterRight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0"
            android:paddingEnd="2dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        tools:text="In-app test title"></TextView>

</FrameLayout>